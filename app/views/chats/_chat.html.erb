<div id="<%= dom_id chat %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">User destination chat:</strong>
    <%= @other_user.email %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this chat", chat, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
