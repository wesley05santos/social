<div>
  <% @users.each do |user| %>
    <p>
      <%= user.email %> |
      <% if user.followers.include?(current_user) %>
        <%= link_to "Unfollow", unfollow_path(user_id: user.id), data: { turbo_method: :delete } %>
      <% else %>
        <%= link_to "Follow", follow_path(user_id: user.id), data: { turbo_method: :post } %>
      <% end %>
    </p>
  <% end %>
</div>
